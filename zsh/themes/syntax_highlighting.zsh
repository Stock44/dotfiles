# Monokai theme for zsh-syntax-highlighting
#
# Created by Hiram Mu√±oz

typeset -A ZSH_HIGHLIGHT_STYLES

ZSH_HIGHLIGHT_STYLES[command]="fg=${MONOKAI_BLUE}"
ZSH_HIGHLIGHT_STYLES[arg0]="fg=${MONOKAI_BLUE}"
ZSH_HIGHLIGHT_STYLES[commandseparator]="fg=${MONOKAI_RED}"
ZSH_HIGHLIGHT_STYLES[builtin]="fg=${MONOKAI_RED}"
ZSH_HIGHLIGHT_STYLES[path]="fg=${MONOKAI_YELLOW}"
ZSH_HIGHLIGHT_STYLES[single-quoted-argument]="fg=${MONOKAI_YELLOW}"
ZSH_HIGHLIGHT_STYLES[double-quoted-argument]="fg=${MONOKAI_YELLOW}"
ZSH_HIGHLIGHT_STYLES[reserved-word]="fg=${MONOKAI_RED}"
ZSH_HIGHLIGHT_STYLES[single-hyphen-option]="fg=${MONOKAI_ORANGE}"
ZSH_HIGHLIGHT_STYLES[double-hyphen-option]="fg=${MONOKAI_ORANGE}"
ZSH_HIGHLIGHT_STYLES[precommand]="fg=${MONOKAI_RED}"
ZSH_HIGHLIGHT_STYLES[unknown-token]="bg=${MONOKAI_RED}"
ZSH_HIGHLIGHT_STYLES[globbing]="fg=${MONOKAI_YELLOW}"
ZSH_HIGHLIGHT_STYLES[autodirectory]="fg=${MONOKAI_YELLOW}"
